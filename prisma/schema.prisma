generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  email    String?  @unique
  username String   @unique
  password String
  folders  Folder[]
}

model Folder {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
  files     File[]
  Shares    Share[]
}

model File {
  id         Int      @id @default(autoincrement())
  name       String
  size       Int
  uploadedAt DateTime @default(now())
  folder     Folder?  @relation(fields: [folderId], references: [id])
  folderId   Int?
  url        String
}

model Share {
  id              Int      @id @default(autoincrement())
  code            String   @unique
  folder          Folder   @relation(fields: [folderId], references: [id])
  folderId        Int
  createdAt       DateTime @default(now())
  durationSeconds Int ///seconds
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
