<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../styles/styles.css">
  <title>File uploader</title>
</head>

<body>

  <header>
    <% if (locals.currentUser) { %>
    <a href="/logout">Logout</a>
    <p>Welcome, <%= currentUser.username %>!</p>
    <% } else {%>
    <a href="/login">Login</a>
    <a href="/signup">Signup</a>
    <% } %>

    <h1>File Uploader</h1>

  </header>

  <main>

    <%- include("partials/error.ejs") %>
    <% if (locals.currentUser) { %>

    <h2>New Folder</h2>
    <form action="/createfolder" method="post">
      <label for="foldername">New Folder Name: </label>
      <input type="text" id="foldername" name="foldername" required />
      <button type="submit">Submit</button>
    </form>

    <% if (folders.length > 0) { %>
    <h2>Folders</h2>
    <ul class="folders">
      <% for (let i = 0; i < folders.length; i++) { %>
      <li class="single-folder">

        <!-- TODO: link template -->
        <h3><a href="/folder/<%= folders[i].id %>"><%= folders[i].name %></a></h3>

        <p>Created: <%= new Date(folders[i].createdAt).toLocaleString() %></p>

        <form action="/deleteFolder/<%= folders[i].id %>" method="post">
          <p><button type="submit" onclick="return confirm('Are you sure you want to delete this folder and all its contents?')">DELETE folder</button></p>
        </form>

        <p><a href="/updateFolder/<%= folders[i].id %>">UPDATE folder</a></p>

        <p><a href="/shareForm/<%= folders[i].id %>">SHARE folder</a></p>

      </li>
      <% } %>
    </ul>
    <% } %>
    <% } %>
  </main>
</body>


</html>